<div class="col">
  <a href="{% if entry.redirect %}{{ entry.redirect }}{% else %}{{ entry.url | relative_url }}{% endif %}">
    <div class="card h-100 hoverable">
      {% if entry.img %}
        {%
          include figure.liquid
          loading="eager"
          path=entry.img
          sizes="250px"
          alt="teaching thumbnail"
          class="card-img-top"
        %}
      {% endif %}
      <div class="card-body">
        <h2 class="card-title">{{ entry.title }}</h2>
        <p class="card-text">{{ entry.description }}</p>
        <div class="row ml-1 mr-1 p-0">
          {% if entry.github %}
            <div class="github-icon">
              <div class="icon" data-toggle="tooltip" title="Code Repository">
                <a href="{{ entry.github }}"><i class="fa-brands fa-github gh-icon"></i></a>
              </div>
              {% if entry.github_stars %}
                <span class="stars" data-toggle="tooltip" title="GitHub Stars">
                  <i class="fa-solid fa-star"></i>
                  <span id="{{ entry.github_stars }}-stars"></span>
                </span>
              {% endif %}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </a>
</div>
